{
  "name": "funkcia",
  "version": "0.3.1",
  "description": "",
  "author": "Luke Morales <lukemorales@live.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukemorales/funkcia.git"
  },
  "bugs": {
    "url": "https://github.com/lukemorales/funkcia/issues"
  },
  "keywords": [],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "default": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "prettier": "@lukemorales/prettier-config",
  "eslintConfig": {
    "extends": [
      "lukemorales",
      "lukemorales/oss"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "scripts": {
    "build": "run-p build:*",
    "build:tsup": "tsup --dts --minify",
    "changeset": "changeset",
    "clean": "rimraf dist",
    "dev": "pnpm run test:coverage --ui",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src --ext .ts",
    "lint:eslint:fix": "pnpm run lint:eslint --fix",
    "lint:format": "prettier --check ./src",
    "lint:format:fix": "prettier --write ./src",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "prerelease": "run-p build test:ci",
    "release": "changeset publish",
    "test": "vitest --passWithNoTests",
    "test:ci": "pnpm run test:coverage --run",
    "test:coverage": "pnpm run test --coverage"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.26.1",
    "@lukemorales/prettier-config": "^1.0.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "eslint-config-lukemorales": "^0.4.1",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2",
    "typescript": "4",
    "vitest": "^1.3.1"
  }
}
